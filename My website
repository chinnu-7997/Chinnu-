  <script>
    let modal = document.getElementById("buyModal");
    let itemTitle = document.getElementById("itemTitle");
    let itemPrice = document.getElementById("itemPrice");
    let whatsappBtn = document.getElementById("whatsappBtn");

    function openModal(product, price) {
      modal.style.display = "block";
      itemTitle.innerText = product;
      itemPrice.innerText = price;

      // WhatsApp message link
      const message = `Hello! I want to order *${product}* for â‚¹${price}. Please confirm the order.`;
      whatsappBtn.href = `https://wa.me/91842718254?text=${encodeURIComponent(message)}`;
    }

    function closeModal() {
      modal.style.display = "none";
    }

    function submitCOD(event) {
      event.preventDefault();
      alert("Your Cash on Delivery order has been placed! ðŸ§¸");
      closeModal();
    }

    // Close modal if clicked outside
    window.onclick = function(event) {
      if (event.target == modal) {
        closeModal();
      }
    };
  </script>

